<div class="container">
  <div class="new-game mt-5">
    <h1>New game</h1>
    <div class="letters mt-3">
      <% @letters.each do |letter| %>
        <div class="letter text-center"><h2 class="align-middle"><%= letter %></h2></div>
      <% end %>
    </div>
  </div>
  <div class="form mt-5">
    <form action="/score" method="post">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <label for="longest-word">What is the longest word you can find?</label>
      <div class="submit-word">
        <input type="text" name="word" class="form-control" id="longest-word">
        <input type="submit" value="Play" class="btn btn-primary">
      </div>
    </form>
  </div>
</div>
